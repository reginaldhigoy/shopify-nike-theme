{% if section.settings.show_announcement %}
  <div class="flex justify-between items-center px-5 text-md font-sans font-medium announcement-bar">
    <div class="flex gap-2">
      {% if section.settings.image != blank %}
        <img
          width="40"
          height="40"
          src="{{ section.settings.image | image_url }}"
          loading="lazy"
          alt="{{ section.settings.image.alt | escape }}">
      {% else %}
        <img
          width="40"
          height="40"
          src="{{ 'a.png' | asset_url }}"
          loading="lazy"
          alt="nike icon">
      {% endif %}

      {% if section.settings.image2 != blank %}
        <img
          width="40"
          ,
          height="40"
          src="{{ section.settings.image2 | image_url }}"
          loading="lazy"
          alt="{{ section.settings.image2.alt | escape }}">
      {% else %}
        <img
          width="40"
          ,
          height="40"
          src="{{ 'b.png' | asset_url }}"
          loading="lazy"
          alt="nike icon">
      {% endif %}
    </div>

    <div>
      <ul class="flex gap-2">
        {% if section.blocks.size > 0 %}
          {% for block in section.blocks %}
            <li>
              <a href="{{ block.settings.link }}">{{ block.settings.text }}</a>
            </li>
          {% endfor %}
        {% else %}
          <li>
            <a href="#">Help</a>
          </li>
          {% if shop.customer_accounts_enabled %}
              <li>
                <a href="{{ routes.account_url }}">Account</a>
              </li>
            {% else %}
              <li>
                <a href="{{ routes.account_login_url }}">Sign in</a>
              </li>
          {% endif %}
        {% endif %}
      </ul>

    </div>
  </div>
{% endif %}

<style>
  .announcement-bar {
    background: {{ section.settings.background }};
    color: {{ section.settings.text_color }}
  }
</style>

{% schema %}
  {
    "name": "Announcement Bar",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_announcement",
        "label": "Show Announcement",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Pick image",
        "info": "png annoucement image"
      },
      {
        "type": "image_picker",
        "id": "image1",
        "label": "Pick image",
        "info": "png annoucement image"
      },
      {
        "type": "color",
        "id": "background",
        "label": "Background Color",
        "default": "#f4f4f4"
      }, {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#000000"
      }
    ],
    "blocks": [
      {
        "name": "Links",
        "type": "links",
        "limit": 4,
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Text",
            "default": "link"
          }, {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "announcement-bar"
      }
    ]
  }
{% endschema %}